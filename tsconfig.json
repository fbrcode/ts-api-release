{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["api/**/*", "**/*.ts"],
  "exclude": ["node_modules", "dist", "out", "tests", "aws"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
